<% include partials/header %> 

<div class="container">
    <div class="row text-center title">   
        <div class="col-sm-8 offset-sm-2">
            <h1 class="display-4">Are you my furever home?
                <br>
                <small class="text-muted">meet your new furry family member!</small>
            </h1>
            <a class="btn btn-outline-success btn-lg btn-block" href="/dogs/new">Add a new dog</a>
        </div> 
    </div>
<!--TODO: Show total results found-->
    <div class="row">
        
        <% dogs.forEach( dog => { %> 
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="<%= dog.image %>" alt="<%= dog.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= dog.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">a <%= dog.breed %> &vert; age <%= dog.ageYr %> yrs <%= dog.ageMo %> mos</h6>
                    <p class="card-text"><%= dog.description.slice(0,100); %></p>
                    <a href="/dogs/<%= dog._id %>">Learn more about <%= dog.name %></a>
                </div>
            </div><!-- end .card -->
        </div><!-- end .col -->
        <% }); %>

    </div><!-- end .row --> 
</div><!-- end .container -->

<% include partials/footer %> 
